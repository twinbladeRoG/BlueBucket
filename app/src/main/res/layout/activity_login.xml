<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blue_gradient"
    android:fitsSystemWindows="true"
    tools:context="com.infikaa.indibubble.EnterActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="@dimen/large_gap"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:transitionName="logoImage" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/medium_gap"
            android:layout_marginRight="@dimen/medium_gap"
            android:layout_marginTop="@dimen/large_gap"
            android:layout_marginBottom="@dimen/large_gap"
            android:orientation="vertical">
            <EditText
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="E-mail ID"
                android:inputType="textEmailAddress"
                android:drawablePadding="8dp"
                android:text="subho040995@gmail.com" />

            <EditText
                android:id="@+id/password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="@dimen/large_gap"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:text="Subho@0409" />


            <Button
                android:id="@+id/login_button"
                android:layout_marginTop="@dimen/large_gap"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
